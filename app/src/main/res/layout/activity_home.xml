<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homeBackground"
    tools:context=".HomeScreen.HomeActivity">

    <ImageView
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="@string/base_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_gravity="center"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:id="@+id/spinnerBaseCurrency"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="@color/homeBackground"
        android:background="@color/button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/latestForexRatesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latest_rates" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dateEntryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/enter_date"
            android:inputType="date" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:textColor="@color/homeBackground"
        android:background="@color/button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/forexRatesByDateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rates_by_date" />

</LinearLayout>